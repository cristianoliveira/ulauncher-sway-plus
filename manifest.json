{
    "required_api_version": "^2.0.0",
    "name": "Ulauncher Sway+",
    "description": "Ulauncher extension to control Sway",
    "developer_name": "Cristian Oliveira",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.05
    },
    "preferences": [
        {
            "id": "sway-windows",
            "type": "keyword",
            "name": "Sway+  windows",
            "description": "Activates a window in Sway",
            "default_value": "w"
        },
        {
            "id": "sway-marks",
            "type": "keyword",
            "name": "Sway+ marks",
            "description": "Manages marks in Sway",
            "default_value": "wm"
        },
        {
            "id": "sway-workspaces",
            "type": "keyword",
            "name": "Sway+ workspaces",
            "description": "Manages workspaces in Sway",
            "default_value": "ws"
        },
        {
            "id": "sort_by",
            "type": "select",
            "name": "Sort matches by Most visited | Recent | None",
            "description": "The order in which to show the bookmarks",
            "default_value": "none",
            "options": [
                {
                    "text": "Most visited",
                    "value": "most_used"
                },
                {
                    "text": "Recent visited",
                    "value": "recent"
                },
                {
                    "text": "None",
                    "value": "none"
                }
            ]
        }
    ]
}
